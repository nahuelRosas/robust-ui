{
  "name": "@robust-ui/tools",
  "description": "Robust UI Tools",
  "version": "0.3.0",
  "author": "Nahuel Rosas <nahuel.rosas@mi.unc.edu.ar>",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup-node src/index.ts* --format esm,cjs --dts --minify terser --external react",
    "dev": "tsup src/index.ts* --format esm,cjs --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo node_modules dist CHANGELOG.md"
  },
  "dependencies": {
    "@robust-ui/contexts": "workspace:*",
    "@robust-ui/functions": "workspace:*",
    "@robust-ui/hooks": "workspace:*",
    "@robust-ui/theme": "workspace:*",
    "dompurify": "^3.0.5"
  },
  "devDependencies": {
    "@robust-ui/tsconfig": "workspace:*",
    "@types/dompurify": "^3.0.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.49.0",
    "eslint-config-robust": "workspace:*",
    "react": "^18.2.0",
    "terser": "^5.19.4",
    "tsup": "^7.2.0",
    "typescript": "5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
