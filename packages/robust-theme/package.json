{
  "name": "@robust-ui/theme",
  "description": "A theme for Robust UI",
  "version": "0.1.0",
  "author": "Nahuel Rosas <nahuel.rosas@mi.unc.edu.ar>",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts* --format esm,cjs --dts --minify terser --external react",
    "dev": "tsup src/index.ts* --format esm,cjs --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo node_modules dist CHANGELOG.md"
  },
  "devDependencies": {
    "@robust-ui/tsconfig": "workspace:*",
    "eslint-config-robust": "workspace:*",
    "eslint": "^8.49.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
